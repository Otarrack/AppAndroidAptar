<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">@color/red</item>
        <item name="colorPrimaryDark">@color/red_dark</item>
        <item name="colorAccent">@color/yellow</item>
        <item name="android:navigationBarColor">@color/yellow</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="android:colorForeground">@color/grey</item>
        <item name="android:statusBarColor">@color/red_dark</item>
        <item name="android:windowBackground">@color/white</item>
    </style>

    <style name="Aptar" parent="AppTheme" >
        <item name="android:windowLightStatusBar" tools:targetApi="23">true</item>
        <item name="colorControlNormal">@color/aptar_bh_light_blue</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryDark">@color/aptar_bh_primary</item>
        <item name="colorAccent">@color/aptar_bh_light_blue</item>
        <item name="android:navigationBarColor">@color/aptar_bh_light_blue</item>
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:textColorPrimary">@color/aptar_bh_primary</item>
        <item name="android:textColorPrimaryInverse">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ToolbarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/aptar_bh_light_blue</item>
    </style>

    <style name="DrawerArrowStyle" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/aptar_bh_light_blue</item>
    </style>


    <style name="ButtonStyle" parent="Widget.AppCompat.Button.Colored">
    </style>
</resources>
