<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.florian.projet.quarantaine.ArticleDetailActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/article_detail_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:theme="@style/Aptar"
        app:titleTextColor="@color/aptar_bh_secondary"/>

    <android.support.design.widget.TabLayout
        android:id="@+id/article_detail_tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabTextColor="@color/aptar_bh_secondary"
        android:fillViewport="true"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/article_detail_viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"/>

</LinearLayout>
