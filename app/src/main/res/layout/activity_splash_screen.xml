<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.florian.projet.view.activity.SplashScreenActivity">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" >

        <TextView
            android:id="@+id/splashscreen_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Initialisation des donnÃ©es"
            android:textStyle="bold"
            android:textColor="@color/aptar_bh_primary"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/machine_performance_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Machine"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/aptar_bh_secondary"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/splashscreen_title"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/machine_performance_step_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/machine_performance_lib"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/machine_performance_step_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/machine_performance_step_lib"
            app:layout_constraintEnd_toStartOf="@+id/machine_performance_step_2"/>

        <ImageView
            android:id="@+id/machine_performance_step_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/machine_performance_step_lib"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/machine_performance_step_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/machine_performance_step_lib"
            app:layout_constraintStart_toEndOf="@id/machine_performance_step_2"/>

        <TextView
            android:id="@+id/article_performance_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Performance Article"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/aptar_bh_secondary"
            android:layout_marginTop="50dp"
            app:layout_constraintTop_toBottomOf="@id/machine_performance_step_2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/article_performance_step_lib"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/article_performance_lib"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/article_performance_step_1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/article_performance_step_lib"
            app:layout_constraintEnd_toStartOf="@+id/article_performance_step_2"/>

        <ImageView
            android:id="@+id/article_performance_step_2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/article_performance_step_lib"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <ImageView
            android:id="@+id/article_performance_step_3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="30dp"
            android:layout_marginEnd="30dp"
            android:background="@drawable/round_border"
            app:layout_constraintTop_toBottomOf="@id/article_performance_step_lib"
            app:layout_constraintStart_toEndOf="@id/article_performance_step_2"/>

    </android.support.constraint.ConstraintLayout>

</android.support.constraint.ConstraintLayout>
