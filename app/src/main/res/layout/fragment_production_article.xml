<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/production_scroll"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/production_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/production_article_title"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:textColor="@color/aptar_bh_light_blue"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/article"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="15dp"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/production_article_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toRightOf="parent"
            app:layout_constraintRight_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/production_article_title"
            />

    </android.support.constraint.ConstraintLayout>

</ScrollView>